<!DOCTYPE html>
<html>

<head>
  <title>Taco Recipes</title>
  <link rel="stylesheet" type="text/css" href="/styles/main.css">
</head>

<body>
  <h1>Taco Town 🌮</h1>

  <form action="/recipe" method="POST" class="buttons">
    <button type="submit" value="Chicken Taco" name="taco">🍗</button>
    <button type="submit" value="Beef Taco" name="taco">🥩</button>
    <button type="submit" value="Fish Taco" name="taco">🐟</button>
    
  </form>
  <div id="recipeContainer" class="hidden">

    <% if(locals.name){%> <%# if the object name is exist %>
      <h2><%= name %> </h2>

      <h3>Ingredients:</h3>
      <ul id="ingredientsList">
        <li><%= proteinName %>, <%= proteinPreparation %></li>
        <li><%= salsaName %></li>
        <% toppings.forEach((topping) => { %>
          <li><%= topping.quantity %> of <%= topping.name %></li>
        <%  }); %>
      </ul>

    <%} else { %>
      <h2>Pick your favourite taco ingredient 👆</h2>
    <% } %>
    
    



  </div>
</body>

</html>